@import './_variables.styl'
@import './_breakpoints.styl'

input[type=text]
input[type=password]
select
  padding 0.5rem
  border 1px solid color-black
  outline 0
  transition box-shadow 0.25s ease
input[type=text]:focus
  box-shadow 0 0 4px darken(color-primary, 70%)
textarea
  width calc(100% - 2px)
textarea.element
  width calc(100% - 22px)
select
  box-sizing content-box


button
  background-color transparent
  cursor pointer
  outline 0
  border 0
  box-shadow none
  transition box-shadow 0.25s ease

.button--primary
  background-color color-primary
  color color-secondary

.button:hover
  box-shadow 0 0 4px darken(color-primary, 70%)

.form-actions
  width 100%
  display flex
  justify-content flex-start
  margin 2rem 0
  button:first-child
    margin-right 0.5rem
  button:last-child
    margin-left 0.5rem
  button
    flex 1
    padding 0.5rem 0

.form-group
  width 100%
  display flex
  justify-content flex-start
  align-items center
  margin-bottom 1rem

  label
    flex 1

  input
  select
    flex 2

  select
    box-sizing content-box

  +phone-only()
    .form-group
      flex-direction column
  +tablet-up()
    .form-group
      flex-direction row
